<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <com.yw.musicplayer.view.widget.MyAppBar
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="top"
        android:background="?attr/colorPrimary"
        android:clipChildren="false">
        <!--android:theme="@style/BaseAppTheme.AppBarOverlay"-->

        <!--app:popupTheme="@style/BaseAppTheme.PopupOverlay"-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:visibility="gone" />

        <com.jude.rollviewpager.RollPagerView
            android:id="@+id/rollviewpager"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:rollviewpager_play_delay="3000" />
    </com.yw.musicplayer.view.widget.MyAppBar>

    <android.support.design.widget.TabLayout
        android:id="@+id/id_tab_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        app:tabTextColor="@color/white"
        app:tabSelectedTextColor="@color/white"
        app:tabMode="scrollable" />

    <com.yw.musicplayer.view.widget.DragExpendLayout
        android:id="@+id/dragexpendview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false">


        <com.yw.musicplayer.view.widget.MyViewPager
            android:id="@id/id_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.yw.musicplayer.view.widget.MyViewPager>
    </com.yw.musicplayer.view.widget.DragExpendLayout>

</FrameLayout>
